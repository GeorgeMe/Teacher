<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:orientation="vertical"
    tools:context=".activity.RechargeActivity">

    <include layout="@layout/top_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/input_recharge"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/feed_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:textColor="#666666"
                    android:textSize="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cccccccc"/>

            <EditText
                android:id="@+id/et_recharge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="金额"
                android:gravity="center_vertical|right"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:textColor="#333333"

                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/yuan"
                android:textColor="#333333"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:layout_below="@+id/input_recharge"
            android:id="@+id/btn_recharge"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:background="@drawable/c1_apply_btn_select"
            android:text="充值"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
    </RelativeLayout>
</LinearLayout>
