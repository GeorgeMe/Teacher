<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingActivity">
    <include layout="@layout/top_view" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_setting_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="@string/nickname"/>
        <View
            android:background="@color/app_line_view_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_setting_avatar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="@string/avatar"/>
       <View
            android:background="@color/app_line_view_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_setting_signature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="@string/signature" />
       <View
            android:background="@color/app_line_view_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_setting_brief"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="@string/brief"/>
       <View
            android:background="@color/app_line_view_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_setting_change_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="@string/changepassword" />
       <View
            android:background="@color/app_line_view_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_setting_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="@string/feedback" />
       <View
            android:background="@color/app_line_view_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/c1_apply_btn_select"
        android:gravity="center"
        android:text="@string/exit"
        android:textColor="#ffffff" />
</LinearLayout>
